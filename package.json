{
  "name": "elu",
  "version": "1.0.0",
  "description": "Личные сообщения",
  "author": "fpsParser <mattserious2302@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/fpsParser/Elu.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "build": "electron-builder",
    "deploy": "electron-builder -w -p always"
  },
  "dependencies": {
    "express": "^4.21.2",
    "mongoose": "^8.0.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "productName": "Elu",
    "appId": "com.elu.app",
    "publish": {
      "provider": "github",
      "owner": "fpsParser",
      "repo": "Elu",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/{*,.*}"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    }
  }
}
