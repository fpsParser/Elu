    "server": "node server.js",
    "build": "electron-builder"
  },
  "dependencies": {
    "express": "^4.21.2",
    "firebase": "^10.7.0",
	"mongoose": "^8.0.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
